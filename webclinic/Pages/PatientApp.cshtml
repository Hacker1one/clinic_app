        margin: 10px 0;
    }

    .star {
        width: 30px;
        height: 30px;
        background: url('star-outline.svg') no-repeat center;
        background-size: contain;
        cursor: pointer;
        transition: transform 0.2s ease;
    }

        .star:hover,
        .star.selected {
            background: url('star-filled.svg') no-repeat center;
            transform: scale(1.2);
        }

    .feedback {
        margin: 10px 0;
        color: #777;
    }

        .feedback textarea {
            width: 100%;
            padding: 10px;
            border: 1px solid #ddd;
            border-radius: 5px;
            resize: none;
            font-size: 14px;
        }

    .add-btn {
        margin-top: 10px;
        padding: 10px 20px;
        border: none;
        background: #007bff;
        color: #fff;
        border-radius: 5px;
        cursor: pointer;
        transition: background 0.3s ease;
        font-size: 14px;
    }

        .add-btn:hover {
            background: #0056b3;
        }

        .add-btn:disabled {
            background: #ccc;
            cursor: not-allowed;
        }

    /* Review Form Container (Hidden by Default) */
    .review-form-container {
        display: none;
        margin-top: 15px;
    }

    .star {
        font-size: 30px; /* Size of the star */
        color: #ccc; /* Color of empty stars */
        cursor: pointer;
        transition: color 0.3s ease, transform 0.2s ease; /* Hover effects */
    }

        .star.selected, .star:hover {
           
            transform: scale(1.2); /* Slight enlargement on hover */
        }

</style>

