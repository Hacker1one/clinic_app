<div class="container mt-5">
    <div class="row">
        <!-- Filters Section on the left -->
        <div class="col-md-3 mb-4">
            <div class="filters">
                <h4 class="mb-4">Filters</h4>
                <!-- Availability -->                
                <div class="mb-4">
                    <label>Availability</label>                    
                    <div>
                        <input type="checkbox" id="today" name="availability" value="today">                        
                        <label for="today">Today</label>
                    </div>                    <div>
                        <input type="checkbox" id="this-week" name="availability" value="this-week">                        
                        <label for="this-week">This Week</label>
                    </div>                    <div>
                        <input type="checkbox" id="online" name="availability" value="online">                       
                        <label for="online">Online</label>
                    </div>
                </div>

                <!-- Specific Date or Range -->
                <div class="mb-4">
                    <label for="date-range">Specific date or range</label>
                    <input type="date" id="date-range" name="date-range"
                           class="form-control">
                </div>

                <div class="mb-4" ">
                    <label for="specialization">Speciality</label>
                    <br>
                    <select id="specialization" class="form-control" asp-for="special" >
                        <option value="">Select Specialization</option>
                        
                        @for (int i = 0; i < Model.fields.Rows.Count; i++)
                        {
                            <option value="@i">@Model.fields.Rows[i]["FieldName"].ToString()</option>
                        }
                    </select>
                </div>
                
                <!-- Governorate dropdown -->
                <div class="mb-4" style="margin: 60px 0;">
                    <label for="action="government"">Government</label>
                    <br >
                    <select id="governorateSelect"  class="form-control" asp-for="governorate" onchange="showCity()">
                        <option value="">Governorate</option>
                        @for (int i = 0; i < Model.allGovernorates.Rows.Count; i++)
                        {
                            <option value="@i">@Model.allGovernorates.Rows[i]["Governorate"].ToString()</option>
                        }
                    </select>
                </div>

     @*            <!-- City dropdown -->
                <select class="form-select d-none justify-content-center align-items-center w-50 mx-auto mb-3" asp-for="city" id="citySelect" aria-label="City" required>
                    <option value="">City</option>
                </select>
                *@
                <!-- Session Fees -->
                <div class="mb-4" style="margin: 60px 0;">
                    <label for="fees-range">Session Fees</label>
                    <input type="range" id="fees-range" name="fees-range" min="140" max="4700" step="10">
                    <div>140 EGP - 4700 EGP</div>
