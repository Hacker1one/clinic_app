<style>
    form {
        max-width: 500px;
        margin: 20px auto;
        background: #ffffff;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    form div {
        margin-bottom: 15px;
    }

    label {
        display: block;
        font-weight: bold;
        margin-bottom: 5px;
        color: #333;
    }

    select, input {
        width: 100%;
        padding: 10px;
        font-size: 14px;
        border: 1px solid #ccc;
        border-radius: 5px;
    }

    button {
        width: 100%;
        padding: 10px;
        background-color: #007bff;
        color: white;
        border: none;
        border-radius: 5px;
        font-size: 16px;
        cursor: pointer;
    }

    button:hover {
        background-color: #0056b3;
    }
</style>

<form method="post">
    <div>
        <label for="ConditionName">Condition Name:</label>
        <select id="ConditionName" name="ConditionName">
            @foreach (var condition in Model.ConditionList)
            {
                    <option value="@condition">@condition</option>
            }
        </select><br>
    </div>

    <div>
        <br><label for="Severity">Severity:</label>
        <input type="number" id="Severity" name="Severity" required />
    </div>

    <div>
        <label for="DateOfFirstInstance">Date of First Instance:</label>
        <input type="date" id="DateOfFirstInstance" name="DateOfFirstInstance" required />
    </div>

    <button type="submit">Submit</button>
</form>